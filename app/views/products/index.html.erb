<h1>Products</h1>

<%= link_to "New product", new_product_path %>

<div id="products">
  <% @products.each do |product| %>
    <div>
      <%= link_to product.name, product %>
    </div>
  <% end %>
</div>
<style>
/* Style for the h1 header */
h1 {
  font-size: 2em;
  color: #333;
  text-align: center;
  margin-top: 20px;
}

/* Style for the new product link */
a.new-product-link {
  display: block;
  text-align: center;
  margin: 20px 0;
  font-size: 1.2em;
  color: #007bff;
  text-decoration: none;
}

a.new-product-link:hover {
  text-decoration: underline;
}

/* Style for the products container */
products {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  padding: 20px;
}

/* Style for each product item */
products div {
  border: 1px solid #ddd;
  padding: 10px;
  width: 200px;
  text-align: center;
  background-color: #f9f9f9;
}

products div a {
  text-decoration: none;
  color: #333;
  font-size: 1.1em;
}

products div a:hover {
  color: #007bff;
}
</style>